#!/bin/bash

result=0

echo -e "\n Formatting packages"
$(dirname $0)/go fmt cf/...
let "result+=$?"

echo -e "\n Installing package dependencies"
$(dirname $0)/go test -i cf/...
let "result+=$?"

echo -e "\n Testing packages"
$(dirname $0)/go test -v cf/...
let "result+=$?"

echo -e "\n Running build script to confirm main compiles"
$(dirname $0)/build
let "result+=$?"

if [ $result -eq 0 ]; then
	echo -e "\nSUITE SUCCESS"
else
	echo -e "\nSUITE FAILURE"
fi

exit $result