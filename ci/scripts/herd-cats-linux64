#!/usr/bin/env bash

git submodule update --init

export CLIPATH=~/jenkins-slave/workspace/go-cli-tests-linux-64
export GOPATH=$CLIPATH
go build -v -o cf main

export GOPATH=~/go
export CATSPATH=$GOPATH/src/github.com/cloudfoundry/cf-acceptance-tests
cp $CLIPATH/cf $CATSPATH/gcf

export PATH=$PATH:$CATSPATH

cd $CATSPATH
$GOPATH/bin/ginkgo -r -v -slowSpecThreshold=300 -skip="admin buildpack"
